{
  "name": "modern-ts-boilerplate-2024",
  "version": "0.0.1",
  "description": "Modern Typescript Boilerplate 2024",
  "scripts": {
    "server:dev": "nodemon --config nodemon.json --env-file=.env.dev build/server.js",
    "server:prod": "nodemon --config nodemon.json --env-file=.env.prod build/server.js",
    "webpack:watch": "webpack serve --env development",
    "webpack:build": "webpack build --env production",
    "lint": "npx eslint --ext .jsx,.js,tsx src",
    "tsc:watch": "tsc -w",
    "tsc:build": "tsc",
    "dev": "npm-run-all --parallel tsc:watch webpack:watch server:dev",
    "zip": "npm prune --omit=dev && zip -y -r src.zip package.json nodemon.json .env.* build node_modules public",
    "_install": "npm install",
    "build:zip": "npm-run-all --serial tsc:build webpack:build zip _install",
    "build": "npm-run-all --serial tsc:build webpack:build",
    "start": "npm run server:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dtonys/modern-ts-boilerplate-2024.git"
  },
  "author": "Tony Schwartz",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dtonys/modern-ts-boilerplate-2024/issues"
  },
  "homepage": "https://github.com/dtonys/modern-ts-boilerplate-2024#readme",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.584.0",
    "@aws-sdk/client-s3": "^3.583.0",
    "@aws-sdk/lib-dynamodb": "^3.584.0",
    "body-parser": "^1.20.2",
    "express": "^4.19.2",
    "http-proxy-middleware": "^2.0.6",
    "nodemon": "^3.1.1"
  },
  "engines": {
    "node": ">= 20"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.24.1",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource/roboto": "^5.0.13",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-direct-import": "^1.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-sass-loader": "^2.0.1",
    "html-webpack-plugin": "^5.5.3",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-refresh": "^0.14.0",
    "style-loader": "^3.3.3",
    "ts-node": "^10.9.2",
